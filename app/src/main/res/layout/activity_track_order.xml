<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.TrackOrderActivity">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/track_order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightred"
        android:title="Order placed"
        app:titleTextAppearance="@style/ToolbarTitleText" />

    <!-- Order Status Section with Dividers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Order Placed Successfully"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/order_placed" />

        <!-- Status Progress with Icons -->
    </LinearLayout>

    <!-- Divider to separate sections -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Delivery Partner Section -->

    <!-- Divider to separate sections -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Order Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <!-- Dynamic Items for Order Details -->
        <TextView
            android:id="@+id/order_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 1, Item 2, Item 3"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins" />

        <!-- Dynamic Order Amount -->
        <TextView
            android:id="@+id/order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: â‚¹100"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins" />
    </LinearLayout>

    <!-- Divider to separate sections -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Address Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/address_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins" />

        <!-- Dynamic Address -->
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Street, City, Country"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_download_invoice"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="Download Invoice"
        android:textColor="@color/white" />


</LinearLayout>
